[build]
  command = "pip install -r requirements.txt && python -m flask run"
  publish = "."

[build.environment]
  PYTHON_VERSION = "3.11"
  FLASK_APP = "app.py"

[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"

[[redirects]]
  from = "/api/*"
  to = "/api/:splat"
  status = 200